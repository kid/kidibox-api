{
  "name": "kidibox-api",
  "version": "1.0.0",
  "description": "kidiBox api service",
  "main": "app/server.js",
  "scripts": {
    "dev": "nodemon src/server.js --watch src/ --exec babel-node",
    "start": "babel-node src/server.js",
    "test": "mocha --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "test:watch": "npm run test -- --watch",
    "test:cov": "babel-node node_modules/.bin/isparta cover _mocha --root src --include-all-sources -- --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "db:ready": "wait-for-postgres -h $POSTGRES_HOST -p $POSTGRES_PORT -u $POSTGRES_USER -P $POSTGRES_PASSWORD",
    "db:up": "sardine up",
    "db:down": "sardine down"
  },
  "author": "Arnaud Rebts <arnaud.rebts@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.4.0",
    "babel-plugin-syntax-flow": "^6.3.13",
    "babel-plugin-transform-flow-strip-types": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.4.0",
    "babel-plugin-typecheck": "^3.6.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "bluebird": "^3.1.1",
    "hapi": "^13.3.0",
    "hapi-auth-jwt2": "^5.3.0",
    "inert": "^3.2.0",
    "joi": "^8.0.5",
    "jsonwebtoken": "^6.1.0",
    "pg-promise": "^4.0.3",
    "sardine": "^0.6.4",
    "scrypt": "^6.0.2",
    "spdy": "^3.0.0",
    "transmission": "^0.4.3",
    "wait-for-postgres": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "cover": "^0.2.9",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1"
  }
}
