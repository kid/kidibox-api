{
  "name": "kidibox-api",
  "version": "1.0.0",
  "description": "kidiBox api service",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node dist/server.js",
    "start:watch": "supervisor -n -w dist/server.js dist/server.js",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "dev": "concurrent --kill-others 'npm run build:watch -- --colors' 'npm run start:watch'",
    "test": "mocha --require babel-core/register -r ./test/test-helper.js --recursive",
    "test:cov": "babel-node node_modules/.bin/isparta cover --root src --include-all-sources --report lcovonly node_modules/.bin/_mocha -- -r ./test/test-helper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "db:up": "sardine up",
    "db:down": "sardine down"
  },
  "author": "Arnaud Rebts <arnaud.rebts@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.1.1",
    "dotenv": "^1.2.0",
    "hapi": "^11.1.2",
    "hapi-auth-jwt2": "^5.3.0",
    "joi": "^7.0.1",
    "jsonwebtoken": "^5.4.1",
    "pg": "^4.4.3",
    "pg-promise": "^3.0.2",
    "scrypt": "^5.4.1",
    "source-map-support": "^0.4.0",
    "spdy": "^3.0.0",
    "transmission": "^0.4.3"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-syntax-flow": "^6.3.13",
    "babel-plugin-transform-flow-strip-types": "^6.3.15",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-plugin-typecheck": "^3.5.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "concurrently": "^1.0.0",
    "cover": "^0.2.9",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "sardine": "^0.5.4",
    "supervisor": "^0.9.1",
    "webpack": "^1.12.9"
  }
}
