{
  "name": "kidibox-api",
  "version": "1.0.0",
  "description": "kidiBox api service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/main.js --watch src/",
    "start": "node src/main.js",
    "test": "mocha --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "test:watch": "npm run test -- --watch",
    "test:cov": "babel-node node_modules/.bin/isparta cover _mocha --root src --include-all-sources -- --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "db:up": "sardine up",
    "db:down": "sardine down"
  },
  "author": "Arnaud Rebts <arnaud.rebts@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.1.1",
    "dotenv": "^1.2.0",
    "hapi": "^11.1.3",
    "hapi-auth-jwt2": "^5.3.0",
    "joi": "^7.0.1",
    "jsonwebtoken": "^5.4.1",
    "pg": "^4.4.3",
    "pg-promise": "^3.0.2",
    "scrypt": "^5.4.1",
    "spdy": "^3.0.0",
    "transmission": "^0.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^4.1.6",
    "babel-plugin-syntax-flow": "^6.3.13",
    "babel-plugin-transform-flow-strip-types": "^6.3.15",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-plugin-typecheck": "^3.5.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "cover": "^0.2.9",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "sardine": "^0.5.4"
  }
}
