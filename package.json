{
  "name": "kidibox-api",
  "version": "1.0.0",
  "description": "kidiBox api service",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node dist/server.js",
    "start:watch": "supervisor -n -w dist/server.js dist/server.js",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "dev": "concurrent --kill-others 'npm run build:watch -- --colors' 'npm run start:watch'",
    "test": "mocha --compilers js:babel/register -r ./test/test-helper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "test:cov": "babel-node node_modules/isparta/bin/isparta cover --root src --include-all-sources --report html --report lcovonly _mocha -- -r ./test/test-helper.js --recursive",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "db:up": "sardine up",
    "db:down": "sardine down"
  },
  "author": "Arnaud Rebts <arnaud.rebts@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.0.5",
    "joi": "^7.0.0",
    "jsonwebtoken": "^5.4.0",
    "kcors": "^1.0.1",
    "koa": "^1.1.0",
    "koa-body": "^1.3.0",
    "koa-helmet": "^0.3.0",
    "koa-jwt": "^1.1.1",
    "koa-router": "^5.2.3",
    "pg": "^4.4.3",
    "pg-promise": "^2.2.0",
    "scrypt": "^5.4.1",
    "source-map-support": "^0.3.2",
    "spdy": "^2.0.5",
    "transmission": "^0.4.3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-typecheck": "^1.3.0",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "concurrently": "^0.1.1",
    "coveralls": "^2.11.4",
    "eslint": "^1.7.1",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-loader": "^1.1.0",
    "isparta": "^3.5.0",
    "mocha": "^2.3.3",
    "sardine": "^0.2.10",
    "supervisor": "^0.9.1",
    "webpack": "^1.12.2"
  }
}
