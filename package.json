{
  "name": "kidibox-api",
  "version": "1.0.0",
  "description": "kidiBox api service",
  "main": "app/server.js",
  "scripts": {
    "dev": "nodemon src/server.js --watch src/ --exec babel-node",
    "start": "babel-node src/server.js",
    "test": "mocha --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "test:watch": "npm run test -- --watch",
    "test:cov": "babel-node node_modules/.bin/isparta cover _mocha --root src --include-all-sources -- --compilers js:babel-core/register --recursive -r ./test/test-helper.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "db:ready": "wait-for-postgres -h $POSTGRES_HOST -p $POSTGRES_PORT -u $POSTGRES_USER -P $POSTGRES_PASSWORD",
    "db:up": "sardine up",
    "db:down": "sardine down"
  },
  "author": "Arnaud Rebts <arnaud.rebts@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.8.0",
    "babel-plugin-syntax-flow": "^6.8.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-plugin-typecheck": "^3.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "bluebird": "^3.3.5",
    "hapi": "^13.4.0",
    "hapi-auth-jwt2": "^6.0.0",
    "inert": "^3.2.1",
    "joi": "^8.1.0",
    "jsonwebtoken": "^6.2.0",
    "pg-promise": "^4.0.10",
    "sardine": "^0.6.4",
    "scrypt": "^6.0.3",
    "spdy": "^3.3.2",
    "transmission": "^0.4.5",
    "wait-for-postgres": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cover": "^0.2.9",
    "eslint": "^2.9.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  }
}
